/// Get the number of days between two dates.
func numberOfDaysBetween(date1, date2) returns {

    days = 0

	dateFormat = "dd-MM"

	while formattedDate(date1, dateFormat) != formattedDate(date2, dateFormat) {
		
		date1 = dateByAdding(1, "day", date1)
        days += 1
	} 

	return days
}
